@model EntityLayer.Concrete.Product
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<form method="post">
    @Html.Label("Ürün ID")
    @Html.TextBoxFor(x=>x.Id,new {@class = "form-control"})
    @Html.ValidationMessageFor(x=>x.Id)
    <br />
     @Html.Label("Ürün ad")
    @Html.TextBoxFor(x=>x.Name,new {@class = "form-control"})
    @Html.ValidationMessageFor(x=>x.Name)
    <br />
    @Html.Label("Ürün Ifiyat")
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Price)
    <br />
    @Html.Label("Ürün stok")
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Stock)
    <br />
    <button class="btn btn-primary">Güncelle</button>
</form>
